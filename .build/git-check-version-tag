#!/usr/bin/bash

#git-check-version-tag <tag-name> <maven-module>
#git-check-version-tag r4m-sources sources

TAG=$1/v$(mvn org.apache.maven.plugins:maven-help-plugin:evaluate -Dexpression=project.version -q -DforceStdout -pl=$2 | tail -1)
if git ls-remote --tags --exit-code origin refs/tags/$TAG &>/dev/null
then
  printf 0;
else
  printf 1;
fi

